{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyDeleteBucketWithProtectTag",
      "Effect": "Deny",
      "Action": [
        "s3:DeleteBucket"
      ],
      "Resource": "arn:aws:s3:::*",
      "Condition": {
        "StringEquals": {
          "s3:RequestObjectTag/TerraformState": "True"
        }
      }
    }
  ]
}
